{
    "name": "soosyze/queryflatfile",
    "description": "The Queryflatfile is PHP library for simple database not SQL",
    "type": "library",
    "keywords": ["php", "library", "php-library", "nosql", "db", "database", "flat file", "db flat file", "query-builder", "composer"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mathieu NOËL",
            "email": "mathieu@soosyze.com",
            "homepage": "http://mathieu-noel.fr"
        }
    ],
    "support": {
        "email": "mathieu@soosyze.com"
    },
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "4.* || 7.*",
        "php-coveralls/php-coveralls": "^1.0 || ^2.0"
    },
    "suggest": {
        "phpdocumentor/phpdocumentor": "Pour générer une documentation en ligne de commande.",
        "phpmetrics/phpmetrics": "Pour générer un rapport de l'état du code au format HTML."
    },
    "autoload": {
        "psr-4": {
            "Queryflatfile\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": { 
            "Queryflatfile\\Test\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}